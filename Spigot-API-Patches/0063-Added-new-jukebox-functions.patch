Subject: [PATCH] Added new jukebox functions


diff --git a/src/main/java/org/bukkit/entity/Player.java b/src/main/java/org/bukkit/entity/Player.java
index 1d388f55..17ff9a5e 100644
--- a/src/main/java/org/bukkit/entity/Player.java
+++ b/src/main/java/org/bukkit/entity/Player.java
@@ -18,6 +18,7 @@ import org.bukkit.WeatherType;
 import org.bukkit.command.CommandSender;
 import org.bukkit.conversations.Conversable;
 import org.bukkit.creator.hologram.Hologram;
+import org.bukkit.jukebox.player.SongPlayer;
 import org.bukkit.map.MapView;
 import org.bukkit.plugin.messaging.PluginMessageRecipient;
 import org.bukkit.scoreboard.Scoreboard;
@@ -1219,14 +1220,41 @@ public interface Player extends HumanEntity, Conversable, CommandSender, Offline
 
     void setDatabaseIdentifier(String identifier);
 
+    /**
+     * @return actual user songPlayer
+     */
+    @Nullable SongPlayer getPersonalRadio();
+
+    /**
+     * Adds player to radio hearing
+     * @param player to hear the same radio
+     */
+    void shareRadio(Player player);
+
+    /**
+     * @return actual player volume
+     */
     byte getPlayerVolume();
 
+    /**
+     * Set the hearing song volume
+     * @param volume to set
+     */
     void setPlayerVolume(byte volume);
 
+    /**
+     * Stops playing a song for a player
+     */
     void stopPlayingSong();
 
+    /**
+     * @param fileName of the song at the "songs" folder (Without the .nbs)
+     */
     void playSong(String fileName);
 
+    /**
+     * @return if player is receiving a song
+     */
     boolean isReceivingSong();
 
     // Spigot start
diff --git a/src/main/java/org/bukkit/jukebox/instruments/Instrument.java b/src/main/java/org/bukkit/jukebox/instruments/Instrument.java
index 7c49128c..7e83be27 100644
--- a/src/main/java/org/bukkit/jukebox/instruments/Instrument.java
+++ b/src/main/java/org/bukkit/jukebox/instruments/Instrument.java
@@ -6,16 +6,18 @@ public class Instrument {
 
     public static Sound getInstrument(byte instrument) {
         switch (instrument) {
+            case 0:
+                return Sound.NOTE_PLING;
+            case 1:
+                return Sound.NOTE_BASS_GUITAR;
             case 2:
                 return Sound.NOTE_BASS_DRUM;
             case 3:
                 return Sound.NOTE_SNARE_DRUM;
             case 4:
                 return Sound.NOTE_STICKS;
-            case 5:
-                return Sound.NOTE_BASS_GUITAR;
             default:
-                return Sound.NOTE_BASS;
+                return Sound.NOTE_PIANO;
         }
     }
 
